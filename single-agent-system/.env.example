# ============================================================================
# SINGLE AGENT SYSTEM - CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# All static variables are centralized here for easy control

# ============================================================================
# LLM CONFIGURATION (Anthropic)
# ============================================================================

# Your Anthropic API key
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Model selection (choose based on task complexity)
# Options: claude-sonnet-4-20250514, claude-opus-4-20250514, claude-3-haiku-20240307
DISCOVERY_MODEL=claude-sonnet-4-20250514
PLANNING_MODEL=claude-opus-4-20250514
EXECUTION_MODEL=claude-opus-4-20250514
VERIFICATION_MODEL=claude-sonnet-4-20250514

# Model parameters
MODEL_MAX_TOKENS=8192
MODEL_TEMPERATURE=0.1

# ============================================================================
# GITHUB CONFIGURATION
# ============================================================================

# GitHub Personal Access Token (needs repo, workflow permissions)
GITHUB_TOKEN=ghp_your-token-here

# Your GitHub organization or username
GITHUB_ORG=your-org

# Default repository (optional, can be specified per run)
GITHUB_DEFAULT_REPO=

# Webhook secret for GitHub webhooks (optional for local use)
GITHUB_WEBHOOK_SECRET=

# ============================================================================
# JIRA/ATLASSIAN CONFIGURATION
# ============================================================================

# Jira base URL (e.g., https://yourcompany.atlassian.net)
JIRA_BASE_URL=https://yourcompany.atlassian.net

# Jira API token (create at https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-jira-api-token

# Jira username (your email)
JIRA_EMAIL=your-email@company.com

# Default Jira project key
JIRA_PROJECT_KEY=PROJ

# Labels used for AI automation
JIRA_AI_LABEL=AI
JIRA_AUTO_LABEL=auto-generated
JIRA_ERROR_LABEL=error

# ============================================================================
# SLACK CONFIGURATION
# ============================================================================

# Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack App Token (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# Slack Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret

# Default channels for notifications
SLACK_CHANNEL_AGENTS=#ai-agents
SLACK_CHANNEL_ERRORS=#errors
SLACK_CHANNEL_ALERTS=#alerts

# ============================================================================
# SENTRY CONFIGURATION
# ============================================================================

# Sentry organization slug
SENTRY_ORG=your-sentry-org

# Sentry Auth Token (create at https://sentry.io/settings/account/api/auth-tokens/)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Error thresholds for auto-escalation
SENTRY_THRESHOLD_FATAL=1
SENTRY_THRESHOLD_ERROR=10
SENTRY_THRESHOLD_WARNING=50
SENTRY_THRESHOLD_INFO=100

# ============================================================================
# LOCAL EXECUTION SETTINGS
# ============================================================================

# Directory for generated artifacts (plans, code, etc.)
OUTPUT_DIR=./output

# Enable verbose logging
LOG_LEVEL=INFO

# Enable dry-run mode (no actual changes made)
DRY_RUN=false

# Maximum retries for failed operations
MAX_RETRIES=3

# Timeout for external API calls (seconds)
API_TIMEOUT=30

# ============================================================================
# CODE EXECUTION SETTINGS
# ============================================================================

# Working directory for code operations
WORK_DIR=./workspace

# Test frameworks by language
TEST_FRAMEWORK_PYTHON=pytest
TEST_FRAMEWORK_JAVASCRIPT=jest
TEST_FRAMEWORK_TYPESCRIPT=jest
TEST_FRAMEWORK_GO=go test

# ============================================================================
# CONVENTIONS
# ============================================================================

# Branch naming pattern ({ticket_id} and {slug} are placeholders)
BRANCH_NAMING_PATTERN=feature/{ticket_id}-{slug}

# Commit message prefixes
COMMIT_PREFIX_FEATURE=feat:
COMMIT_PREFIX_FIX=fix:
COMMIT_PREFIX_TEST=test:
COMMIT_PREFIX_DOCS=docs:
COMMIT_PREFIX_CHORE=chore:

# PR template path in repos
PR_TEMPLATE_PATH=.github/PULL_REQUEST_TEMPLATE.md
