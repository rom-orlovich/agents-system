# ============================================
# AWS AGENTCORE PRODUCTION ENVIRONMENT
# ============================================
# Copy this file to .env and fill in your values
# All configuration is centralized here for easy management

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
PROJECT_NAME=enterprise-agentcore
ENVIRONMENT=production

# ============================================
# BEDROCK MODEL CONFIGURATION
# ============================================
# Discovery Agent - Uses Sonnet for speed
DISCOVERY_AGENT_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0

# Planning Agent - Uses Opus for quality
PLANNING_AGENT_MODEL_ID=anthropic.claude-opus-4-20250514-v1:0

# Execution Agent - Uses Opus for quality
EXECUTION_AGENT_MODEL_ID=anthropic.claude-opus-4-20250514-v1:0

# CI/CD Agent - Uses Sonnet for speed
CICD_AGENT_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0

# Sentry Agent - Uses Sonnet for analysis
SENTRY_AGENT_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0

# Slack Agent - Uses Haiku for quick responses
SLACK_AGENT_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# ============================================
# AGENT RUNTIME CONFIGURATION
# ============================================
# Discovery Agent
DISCOVERY_AGENT_MEMORY_MB=2048
DISCOVERY_AGENT_VCPU=1.0
DISCOVERY_AGENT_TIMEOUT_SECONDS=1800

# Planning Agent
PLANNING_AGENT_MEMORY_MB=4096
PLANNING_AGENT_VCPU=2.0
PLANNING_AGENT_TIMEOUT_SECONDS=3600

# Execution Agent
EXECUTION_AGENT_MEMORY_MB=4096
EXECUTION_AGENT_VCPU=2.0
EXECUTION_AGENT_TIMEOUT_SECONDS=7200

# CI/CD Agent
CICD_AGENT_MEMORY_MB=2048
CICD_AGENT_VCPU=1.0
CICD_AGENT_TIMEOUT_SECONDS=1800

# Sentry Agent
SENTRY_AGENT_MEMORY_MB=1024
SENTRY_AGENT_VCPU=0.5
SENTRY_AGENT_TIMEOUT_SECONDS=900

# Slack Agent
SLACK_AGENT_MEMORY_MB=512
SLACK_AGENT_VCPU=0.25
SLACK_AGENT_TIMEOUT_SECONDS=300

# ============================================
# GITHUB CONFIGURATION
# ============================================
GITHUB_ORG=your-organization
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_MCP_SERVER_URL=https://your-mcp-server.com:3000

# GitHub OAuth App (for delegated access)
GITHUB_OAUTH_CLIENT_ID=Iv1.xxxxxxxx
GITHUB_OAUTH_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxx

# ============================================
# JIRA/ATLASSIAN CONFIGURATION
# ============================================
JIRA_BASE_URL=https://yourcompany.atlassian.net
JIRA_PROJECT_KEY=PROJ
JIRA_OAUTH_CLIENT_ID=your-client-id
JIRA_OAUTH_CLIENT_SECRET=your-client-secret
JIRA_WEBHOOK_SECRET=your-webhook-secret

# Jira Labels Configuration
JIRA_AI_LABEL=AI
JIRA_AUTO_LABEL=sentry-auto
JIRA_ERROR_LABEL=error

# ============================================
# SENTRY CONFIGURATION
# ============================================
SENTRY_ORG=your-sentry-org
SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxxxxxxxxxx
SENTRY_WEBHOOK_SECRET=your-webhook-secret
SENTRY_MCP_SERVER_URL=https://sentry.io/api/0/mcp

# Sentry Error Thresholds (auto-create ticket when exceeded)
SENTRY_THRESHOLD_FATAL=1
SENTRY_THRESHOLD_ERROR=10
SENTRY_THRESHOLD_WARNING=50
SENTRY_THRESHOLD_INFO=100

# ============================================
# SLACK CONFIGURATION
# ============================================
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxxxxxxxxx
SLACK_SIGNING_SECRET=xxxxxxxxxxxxxxxxxxxx
SLACK_APP_TOKEN=xapp-xxxxxxxxxxxxxxxxxxxx

# Slack Channels
SLACK_CHANNEL_AGENTS=#ai-agents
SLACK_CHANNEL_ERRORS=#errors
SLACK_CHANNEL_ALERTS=#alerts

# ============================================
# DYNAMODB CONFIGURATION
# ============================================
DYNAMODB_TASKS_TABLE=enterprise-agentcore-tasks
DYNAMODB_ERROR_TRACKING_TABLE=enterprise-agentcore-error-tracking
DYNAMODB_SESSIONS_TABLE=enterprise-agentcore-sessions

# ============================================
# S3 CONFIGURATION
# ============================================
S3_ARTIFACTS_BUCKET=enterprise-agentcore-artifacts
S3_PLANS_PREFIX=plans/
S3_CODE_CACHE_PREFIX=code-cache/
S3_LOGS_PREFIX=logs/

# ============================================
# API GATEWAY CONFIGURATION
# ============================================
API_GATEWAY_STAGE=prod
API_GATEWAY_RATE_LIMIT=100
API_GATEWAY_BURST_LIMIT=200
API_GATEWAY_CUSTOM_DOMAIN=agents.your-company.com

# ============================================
# STEP FUNCTIONS CONFIGURATION
# ============================================
SFN_MAX_CONCURRENCY=10
SFN_APPROVAL_TIMEOUT_SECONDS=86400

# ============================================
# CODE INTERPRETER CONFIGURATION
# ============================================
CODE_INTERPRETER_MEMORY_MB=2048
CODE_INTERPRETER_TIMEOUT_SECONDS=300
CODE_INTERPRETER_FILESYSTEM_SIZE_MB=5120
CODE_INTERPRETER_NETWORK_ACCESS=false

# Pre-installed packages
CODE_INTERPRETER_PYTHON_PACKAGES=pytest,requests,boto3,pandas,numpy
CODE_INTERPRETER_NPM_PACKAGES=jest,@testing-library/react,eslint,prettier

# ============================================
# MEMORY CONFIGURATION
# ============================================
MEMORY_SHORT_TERM_MAX_EVENTS=100
MEMORY_SHORT_TERM_TTL_SECONDS=3600
MEMORY_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0
MEMORY_VECTOR_DIMENSIONS=1024

# ============================================
# KNOWLEDGE BASE CONFIGURATION
# ============================================
# Leave empty to create new, or provide existing ID
KNOWLEDGE_BASE_ID=

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=true
ENABLE_CLOUDWATCH_INSIGHTS=true

# Custom metric namespace
CLOUDWATCH_NAMESPACE=AgentSystem

# ============================================
# SECURITY CONFIGURATION
# ============================================
ENABLE_WAF=true
WAF_RATE_LIMIT=100

# Secrets Manager prefix for credentials
SECRETS_PREFIX=enterprise-agentcore/

# ============================================
# RETRY CONFIGURATION
# ============================================
MAX_TASK_RETRY_ATTEMPTS=3
MAX_CI_FIX_ATTEMPTS=3
RETRY_BACKOFF_BASE_SECONDS=5

# ============================================
# ORGANIZATION CONVENTIONS
# ============================================
# Branch naming pattern (use {ticket_id} and {slug} placeholders)
BRANCH_NAMING_PATTERN=feature/{ticket_id}-{slug}

# Commit message format
COMMIT_PREFIX_FEATURE=feat:
COMMIT_PREFIX_FIX=fix:
COMMIT_PREFIX_CHORE=chore:

# PR Template
PR_TEMPLATE_PATH=.github/PULL_REQUEST_TEMPLATE.md

# ============================================
# TEST FRAMEWORKS BY LANGUAGE
# ============================================
TEST_FRAMEWORK_PYTHON=pytest
TEST_FRAMEWORK_JAVASCRIPT=jest
TEST_FRAMEWORK_TYPESCRIPT=jest
TEST_FRAMEWORK_GO=go test

# ============================================
# COST MANAGEMENT
# ============================================
MONTHLY_BUDGET_ALERT_USD=500
COST_ANOMALY_THRESHOLD_PERCENT=50
