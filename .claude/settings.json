{
  "permissions": {
    "defaultMode": "acceptEdits",
    "deny": [
      "Bash(rm -rf*)",
      "Bash(rm -r*)",
      "Bash(sudo*)",
      "Bash(chmod 777*)",
      "Bash(curl*|sh)",
      "Bash(wget*|sh)",
      "Bash(dd*)",
      "Bash(mkfs*)",
      "Bash(>*/dev/*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(./secrets/**)",
      "Read(**/config/credentials.*)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Write(.env)",
      "Write(.env.*)",
      "WebFetch"
    ],
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Bash(npm*)",
      "Bash(yarn*)",
      "Bash(pnpm*)",
      "Bash(node*)",
      "Bash(npx*)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git pull*)",
      "Bash(python*)",
      "Bash(python3*)",
      "Bash(pip*)",
      "Bash(docker ps*)",
      "Bash(docker logs*)",
      "Bash(docker inspect*)",
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(grep*)",
      "Bash(find*)",
      "Bash(echo*)",
      "Bash(pwd)",
      "Bash(cd*)",
      "Bash(mkdir*)",
      "Bash(touch*)",
      "Bash(mv*)",
      "Bash(cp*)",
      "Bash(curl -X*)",
      "Bash(wget*)"
    ],
    "ask": [
      "Bash(git push*)",
      "Bash(firebase*)",
      "Bash(docker build*)",
      "Bash(docker run*)",
      "Bash(docker compose*)",
      "Bash(rm*)"
    ],
    "defaultMode": "acceptEdits"
  }
}
