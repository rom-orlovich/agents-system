# Machine Configuration
MACHINE_ID=claude-agent-001

# Claude Model Configuration
# Opus 4.5 for complex tasks, thinking, and planning
CLAUDE_MODEL_PLANNING=claude-opus-4-5-20251101
CLAUDE_MODEL_BRAIN=claude-opus-4-5-20251101

# Sonnet 4.5 for execution and faster tasks
CLAUDE_MODEL_EXECUTOR=claude-sonnet-4-5-20250929

# Default model if not specified (optional)
CLAUDE_DEFAULT_MODEL=claude-sonnet-4-5-20250929

# Webhook Configuration
# Public domain for webhooks (ngrok, cloudflare tunnel, or your domain)
WEBHOOK_PUBLIC_DOMAIN=

# GitHub Integration
GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=claude-agent-001
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_SECONDS=3600

# Database
REDIS_URL=redis://redis:6379/0
DATABASE_URL=sqlite+aiosqlite:////data/db/machine.db

# Logging
LOG_LEVEL=INFO
LOG_JSON=true

# API
API_HOST=0.0.0.0
API_PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=*
